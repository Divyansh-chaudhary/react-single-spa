{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "declarationDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "files": ["src/main.tsx"],
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test*"]
}
